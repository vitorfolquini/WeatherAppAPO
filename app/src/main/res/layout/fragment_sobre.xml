<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cian">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/eu"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitor Rohling Folquini"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:marginTop="16dp" />

    <TextView
        android:id="@+id/ra_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RA: 09049985"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/course_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analise e desenvolvimento de sistemas-Toledo-EAD"
        android:layout_gravity="center" />
</androidx.appcompat.widget.LinearLayoutCompat>